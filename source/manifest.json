{
  "short_name": "Purify",
  "manifest_version": 2,
  "name": "Purify Extension",
  "description": "This extension will pure-ify your browsing behaviour.",
  "version": "1.0",
  "icons": {
    "32": "assets/icon.png"
    },

  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "storage",
    "unlimitedStorage",
    "webRequestBlocking",
    "*://*.google.com/*",
    "*://*.google.de/*",
    "https://5tepzfsmxg.execute-api.eu-central-1.amazonaws.com/*"
  ]
}
